<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="text"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/three_hours_weather_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="--"
            app:layout_constraintBottom_toTopOf="@+id/three_hours_weather_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/three_hours_weather_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/top_card_today_weather_image"
            android:src="@color/colorWhite"
            app:layout_constraintBottom_toTopOf="@+id/three_hours_weather_temp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/three_hours_weather_time"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/three_hours_weather_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="--"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/three_hours_weather_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>